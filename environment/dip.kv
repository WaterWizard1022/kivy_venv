
MDScreen:
    orientation: 'vertical'
    md_bg_color: app.theme_cls.backgroundColor

    

    ScreenManager:
        id: screen_manager


        Screen:
            name: "tipscreen1"
            MDFloatLayout:
                MDLabel:
                    text: "Screen 1"

        Screen:
            name: "tipscreen2"
            MDFloatLayout:
                MDLabel:
                    text: "Screen 2"

    MDButton:
        style: "outlined"
        pos_hint: {"center_x": .85, "center_y": .09}
        id: next
        
        on_press: root.manager.current = app.root.manager.next()
        MDButtonText:
            text: "---->"
