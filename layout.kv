#:import hex_color kivy.utils.get_color_from_hex


MDScreen:
    orientation: 'vertical'
    md_bg_color: app.theme_cls.backgroundColor
    MDTopAppBar:
        theme_bg_color: "Custom" 
        md_bg_color:self.theme_cls.primaryContainerColor
        pos_hint:{'top': 1}
        MDTopAppBarLeadingButtonContainer:
            MDActionTopAppBarButton:
                icon: "menu"
    
        MDTopAppBarTitle:
            text: "TimeTable"
    
        MDTopAppBarTrailingButtonContainer:
    
            MDActionTopAppBarButton:
                icon: "dots-vertical"
    MDBoxLayout:
        
        orientation:"vertical"
        MDScrollView:
            pos_hint: {'center_y': .5, 'center_x': .5}
            size_hint: .9, .8
            MDList:
                id : container
            
    
        
    MDButton:
        style: "outlined"
        id: back
        pos_hint: {"center_x": .15, "center_y": .09}
        MDButtonText:
            text: "<----"
        
    MDScreenManager:
        Monday:
        Tuesday:

<Monday>:
    name: "Monday"
    MDLabel:
        halign: "center"
        pos_hint: { "center_y": 0.9}
        text: "Monday"
    MDButton:
        style: "outlined"
        pos_hint: {"center_x": .85, "center_y": .09}
        id: next
        on_press:root.manager.current = root.manager.next()
        MDButtonText:
            text: "---->"
    MDButton:
        style: "outlined"
        id: back
        pos_hint: {"center_x": .15, "center_y": .09}
        on_press:root.manager.current = root.manager.previous()
        MDButtonText:
            text: "<----"
    MDButton:
        style: "filled"
        id: add
        pos_hint: {"center_x": .5, "center_y": .09}
        on_press:app.show_alert_dialog(),app.create_table()
        MDButtonText:
            text: "ADD"
    
    
    

    

<Tuesday>:   
    name: "Tuesday"
    MDLabel:
        halign: "center"
        pos_hint: { "center_y": 0.9}
        text: "Tuesday"
    MDButton:
        style: "outlined"
        pos_hint: {"center_x": .85, "center_y": .09}
        id: next
        on_press:root.manager.current = root.manager.next()
        MDButtonText:
            text: "---->"
    MDButton:
        style: "outlined"
        id: back
        pos_hint: {"center_x": .15, "center_y": .09}
        on_press:root.manager.current = root.manager.previous()
        MDButtonText:
            text: "<----"


